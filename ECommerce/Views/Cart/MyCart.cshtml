@model ECommerce.Models.OrderVM

@{
    ViewData["Title"] = "MyCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>MyCart</h1>

<h4>OrderVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MyCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderProduct.First().Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderProduct.First().Notes)
                        </th>
                        <th>
                           @Html.DisplayNameFor(model => model.OrderProduct.First().Product.Name)
                        </th>
                        <th>
                           @Html.DisplayNameFor(model => model.OrderProduct.First().Product.Id)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ var i = 0;}
                    @foreach (var item in Model.OrderProduct)
                    {
            
                        <tr>
                            <td>@item.Id</td>
                            <td><input type="text" readonly="readonly" name="OrderProduct[@i].Quantity" asp-for="@item.Quantity" class="form-control" /></td>
                            <td><input type="text" readonly="readonly" name="OrderProduct[@i].Notes" asp-for="@item.Notes" class="form-control" /></td>
                            <td><input type="text" readonly="readonly" asp-for="@item.Product.Name" class="form-control" /></td>
                            <td><input type="text" readonly="readonly" name="OrderProduct[@i].ProductId" asp-for="@item.Product.Id" class="form-control" /></td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
