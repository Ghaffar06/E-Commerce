@model ECommerce.Models.ProductVM
@{
    ViewData["Title"] = "Create New Product";
}
<link rel="stylesheet" href="~/css/atter.css" />
<link rel="stylesheet" href="~/css/add-product.css" />

<style>
	#home_bread:after {
		left:50px!important;
	}
	#product_bread:after {
		left:136px!important;
	}
</style>

<div class="container">
    <div class="row">
        <div class="breadcrumbs" style="margin-bottom: -50px">
		    <ol class="breadcrumb">
			    <li><a id="home_bread" asp-controller="home" asp-action="index">Home</a></li>
			    <li><a id="product_bread" asp-controller="product" asp-action="index">Products</a></li>
			    <li class="active">Create Product</li>
		    </ol>
	    </div>
        <input type="hidden" name="count" value="1" />
        <div class="control-group" id="fields">
            <div class="title-prod">Add new Product</div>
            <div class="controls" id="profs">
                <form class="input-append flex-dir-col" method="post" enctype="multipart/form-data">
                    <div class="row d-flex align-items-baseline">
                        <div id="field" class="form-container">
                        
                            <div class="form-group">
                                <label class="col-form-label mt-4" for="Name">Product Name:</label>
                                <input asp-for="Name" type="text" class="form-control" placeholder="Type something" id="Name">
                            </div>

                            <div class="form-group">
                              <label for="Description" class="form-label mt-4">Product Description:</label>
                              <textarea asp-for="Description" class="form-control" id="Description" rows="4" placeholder="Type about the product"></textarea>
                            </div>

                            <div class="form-group">
                                <label class="col-form-label mt-4" for="Price">Product Price:</label>
                                <input asp-for="Price" type="number" class="form-control" min="1"  
                                    placeholder="bigger than 0" id="Price">
                            </div>

                            <div class="form-group">
                                <label class="col-form-label mt-4" for="Quantity">Product Quantity:</label>
                                <input  asp-for="Quantity" type="number" class="form-control" min="0"  
                                    placeholder="bigger than 0" id="Quantity">
                            </div>
                             <div class="form-group ">
                                 <label class="col-form-label mt-4 check-container check-label-form">
                                    <h5><strong>Is Quantity Integer</strong></h5>
                                    <input asp-for="PriceIsInteger" type="checkbox" id="PriceIsInteger">
                                    <span class="checkmark"></span>
                                 </label>
                            </div>
                            <div class="form-group">
                                <label class="col-form-label mt-4" for="Unit">Product Unit:</label>
                                <input asp-for="Unit" type="text" class="form-control" placeholder="like item,piece,etc" id="Unit">
                            </div>
                        
                            <div class="form-group" id="image_input">
                                @Html.Label("ImageUrl","Category Image:", new { @class = "col-form-label mt-4"})  
                                <input name="uploadFile" type="file" id="Image_url"
                                       class="form-control add_file_btn" style="display:none">
                                <div class="d-flex align-items-center">
                                    <div id='image' class="btn btn-outline-primary mt-2">Select File</div>
                                    <div id='val' class="ml-4"></div>
                                </div>
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-center">
                                <input type="submit" value="Submit" class="btn btn-primary rounded submit_btn mt-3"/>
                            </div>
                        </div>
                    </div>
                </form>
                <br>
            </div>
        </div>
    </div>
</div>

<script src="~/js/add-product.js"></script>